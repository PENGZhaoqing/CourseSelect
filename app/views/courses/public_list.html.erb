<div class="container-fluid">
    <div class="row">
          <div class="pannel pannel-primary">
            <div class="pannel-heading">
                <h3 class="pannel-title">课程列表</h3>
            </div>
            <div class="pannle-body" style="min-hight:450px">
                <table class="table table-striped table-hover" style="background-color: #fff;">
                    <thead>
                        <tr>
                            <th>课程编号</th>
                            <th>课程名称</th>
                            <th>课时/学分</th>
                            <th>限选</th>
                            <th>已选</th>
                            <th>考试方式</th>
                            <th>授课方式</th>
                            
                            <!--<th>主讲教师</th>-->
                            <th>上课教室</th>
                            <th>上课周数</th>
                            <th>上课时间</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                        <% @course.each do |course| %>
                       <tr>
                           <td><%= course.course_code %></td>
                           <td><%= course.name %></td>
                           <td><%= course.credit %></td>
                           <td><%= course.limit_num %></td>
                           <td><%= course.student_num %></td>
                           <td><%= course.exam_type %></td>
                           <td><%= course.teaching_type %></td>
                           <!--<td><%= course.teacher %></td>-->
                           <td><%= course.class_room %></td>
                           <td><%= course.course_week %></td>
                           <td><%= course.course_time %></td>
                           <td><%= link_to "选课", select_course_path(course), class:'btn-sm btn-info' %></td>
                       </tr>
                       <% end %>
                    </tbody>
                </table>
                
            </div>
            
        </div>
        
    </div>
    </div>
</div>